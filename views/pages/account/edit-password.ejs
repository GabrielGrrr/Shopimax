<div id="edit-password" v-cloak>
  <div class="container">
    <h1>Modifier mon mot de passe</h1>
    <hr/>
    <ajax-form action="updatePassword" :syncing.sync="syncing" :cloud-error.sync="cloudError" @submitted="submittedForm()" :handle-parsing="handleParsingForm">
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <label for="password">Nouveau mot de passe</label>
            <input class="form-control" id="password" name="password" type="password" :class="[formErrors.password ? 'is-invalid' : '']"
              v-model.trim="formData.password" placeholder="••••••••" autocomplete="new-password" focus-first>
            <div class="invalid-feedback" v-if="formErrors.password">Veuillez insérer un nouveau mot de passe ou annuler.</div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="form-group">
            <label for="confirm-password">Confirmez votre mot de passe</label>
            <input class="form-control" id="confirm-password" name="confirm-password" type="password" :class="[formErrors.confirmPassword ? 'is-invalid' : '']"
              v-model.trim="formData.confirmPassword" autocomplete="new-password" placeholder="••••••••">
            <div class="invalid-feedback" v-if="formErrors.confirmPassword">Le mot de passe de confirmation est différent.</div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6">
          <p class="text-danger" v-if="cloudError">
            <small>Une erreur s'est déroulée pendant votre requête, veuillez réessayer ou
              <a href="/contact">contacter le support</a>
              si le problème persiste.</small>
          </p>
        </div>
        <div class="col-sm-6">
          <div class="form-group text-right">
            <a class="btn btn-outline-info" href="/account">Annuler</a>
            <ajax-button type="submit" :syncing="syncing" class="btn btn-dark">Enregistrer les changements</ajax-button>
          </div>
        </div>
      </div>
    </ajax-form>
  </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>